{
  "compilerOptions": {
    "target": "ES2019",
    "module": "esnext",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "types": [
      "@types/node",
      "@nuxt/types",
      "cypress"
    ]
  },
  "exclude": [
    "node_modules",
    "local_modules",
    "**/-keep*",
    "**/-old*",
    "server",
    "src/server",
    "tests",
  ]
}